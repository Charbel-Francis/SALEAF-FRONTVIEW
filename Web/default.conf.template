server {
    listen 3333;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        # Serve index.html for React Router paths
        try_files $uri /index.html;
    }

    location /static/ {
        # Serve static assets directly
        expires 1y;
        add_header Cache-Control "public";
    }

    error_page 404 /index.html;
}
